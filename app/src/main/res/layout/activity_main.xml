<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
    android:id="@+id/buttonAddEntry"
    android:layout_width="372dp"
    android:layout_height="47dp"
    android:layout_marginTop="20dp"
    android:onClick="addEntry"
    android:text="ADD ENTRY"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.487"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/arg2" />

    <Button
        android:id="@+id/buttonSaveData"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:onClick="saveData"
        android:text="SAVE DATA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddEntry" />

    <EditText
    android:id="@+id/arg2"
    android:layout_width="324dp"
    android:layout_height="53dp"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="arg2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/arg1" />

    <EditText
    android:id="@+id/arg1"
    android:layout_width="324dp"
    android:layout_height="53dp"
    android:layout_marginTop="44dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="arg1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonInvertValues"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:onClick="invertValues"
        android:text="INVERT VALUES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaveData" />

    <Button
    android:id="@+id/buttonClearList"
    android:layout_width="372dp"
    android:layout_height="47dp"
    android:layout_marginTop="20dp"
    android:onClick="clearList"
    android:text="CLEAR LIST"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.487"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonInvertValues" />

    <ListView
    android:id="@+id/list"
    android:layout_width="411dp"
    android:layout_height="263dp"
    android:layout_marginTop="24dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonClearList"
    app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>